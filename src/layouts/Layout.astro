---
import "../styles/global.css";
import Navigation from "@/sections/Navigation.astro";
import Footer from "@/sections/Footer.astro";
import { ClientRouter } from "astro:transitions";
import Title from "@/components/Title.astro";

interface Props {
  title: string;
  isHome?: boolean;
  description?: string;
}

const {
  title,
  isHome = false,
  description = "Reset a la Matrix - Transforma tu vida y alcanza tu máximo potencial",
} = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name='description' content={description} />
    <meta
      name='keywords'
      content='desarrollo personal, transformación, coaching, bienestar, mindfulness'
    />
    <meta name='author' content='Reset a la Matrix' />
    <meta name='robots' content='index, follow' />

    <!-- Open Graph / Facebook -->
    <meta property='og:type' content='website' />
    <meta property='og:url' content={Astro.url} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:image' content={`${Astro.url}op.png`} />

    <!-- Twitter -->
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:url' content={Astro.url} />
    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={description} />
    <meta property='twitter:image' content={`${Astro.url}op.png`} />

    <!-- WhatsApp -->
    <meta property='og:site_name' content='Reset a la Matrix' />

    <!-- Canonical URL -->
    <link rel='canonical' href={Astro.url} />

    <!-- Preconnect para fuentes -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Orbitron:wght@400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700&display=swap'
      rel='stylesheet'
    />
  </head>
  <body
    class='min-h-screen w-full bg-gradient-to-b from-gray-950 via-gray-900 to-gray-950 font-inter'
  >
    <!-- Video de inicio (solo en home) -->
    {
      isHome && (
        <div class='fixed inset-0 z-[100]' id='video-container'>
          <video
            class='w-full h-full object-cover'
            autoplay
            muted
            playsinline
            preload='auto'
          >
            <source src='/videos/tv-on.mp4' type='video/mp4' />
          </video>
        </div>
      )
    }

    <!-- Contenido principal (inicialmente oculto solo en home) -->
    <div id='main-content' class={isHome ? "opacity-0" : ""}>
      <!-- Navegación siempre visible -->
      <div class=''>
        <Navigation />
      </div>
      <div class='mb-10'>
        <Title />
      </div>
      <slot />
      <div class='relative z-50'>
        <Footer />
      </div>
    </div>
  </body>
</html>

<script>
  const video = document.querySelector("#video-container video");
  const mainContent = document.getElementById("main-content");
  const hasSeenVideo = sessionStorage.getItem("hasSeenVideo");

  if (video && mainContent && !hasSeenVideo) {
    video.addEventListener("ended", () => {
      const container = document.getElementById("video-container");
      if (container) {
        container.style.display = "none";
        mainContent.classList.remove("opacity-0");
        // Marcar que ya se vio el video
        sessionStorage.setItem("hasSeenVideo", "true");
      }
    });
  } else if (mainContent) {
    // Si ya se vio el video o no es home, mostrar el contenido inmediatamente
    mainContent.classList.remove("opacity-0");
    if (video) {
      const container = document.getElementById("video-container");
      if (container) {
        container.style.display = "none";
      }
    }
  }
</script>

<style>
  :root {
    scroll-behavior: smooth;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  #main-content {
    transition: opacity 0.5s ease-in-out;
  }
  .font-inter {
    font-family: "Poppins", sans-serif;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Montserrat", sans-serif;
  }
</style>
