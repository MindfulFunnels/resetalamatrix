---
interface PricingTier {
  name: string;
  price: string;
  originalPrice: string;
  period: string;
  savings: string;
  link: string;
}

const pricingTier: PricingTier = {
  name: "Plan Premium",
  price: "359€",
  originalPrice: "779€",
  period: "3 meses",
  savings: "Ahorra 420€",
  link: "https://buy.stripe.com/fZedTo7AP2ZI8WQ28o",
};
---

<section class='py-8 md:py-16'>
  <div class='container mx-auto px-4'>
    <h2 class='text-4xl md:text-5xl font-bold text-center text-white'>
      Plan de Membresía Premium
    </h2>
    <p
      class='text-lg md:text-xl text-gray-300 text-center mb-8 md:mb-16 max-w-2xl mx-auto px-4 py-6'
    >
      Acceso completo al programa premium con un descuento especial por tiempo
      limitado
    </p>
    <div class='max-w-5xl mx-auto'>
      <div class='relative h-full group'>
        <div
          class='absolute -top-8 md:-top-10 left-1/2 transform -translate-x-1/2 mb-4 animate-bounce pb-6'
        >
          <span
            class='bg-gradient-to-r from-purple-500 to-pink-500 text-white px-4 md:px-6 py-1.5 md:py-2 rounded-full text-base md:text-lg font-bold shadow-lg shadow-purple-500/30'
          >
            ¡Oferta Especial!
          </span>
        </div>
        <div
          class='relative mt-6 md:mt-8 p-6 md:p-12 rounded-2xl transition-all duration-500 h-full flex flex-col overflow-hidden bg-gradient-to-br from-gray-900 via-purple-900 to-gray-900 text-white border border-purple-500/30 hover:scale-105 hover:shadow-2xl hover:shadow-purple-500/20 backdrop-blur-sm'
        >
          <div
            class='absolute inset-0 bg-gradient-to-r from-transparent via-purple-500/10 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000'
          >
          </div>
          <div
            class='absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,rgba(168,85,247,0.1),transparent)]'
          >
          </div>
          <div
            class='flex-grow flex flex-col items-center justify-center relative z-10 py-4'
          >
            <h3
              class='text-2xl md:text-3xl font-bold mb-4 md:mb-6 group-hover:scale-110 transition-transform duration-300 text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400'
            >
              {pricingTier.name}
            </h3>
            <div class='flex flex-col items-center mb-4'>
              <span
                class='text-3xl md:text-4xl line-through text-gray-400 mb-1 md:mb-2'
              >
                {pricingTier.originalPrice}
              </span>
              <div class='flex items-baseline'>
                <span
                  class='text-5xl md:text-6xl font-bold group-hover:scale-110 transition-transform duration-300 text-white'
                >
                  {pricingTier.price}
                </span>
                <span class='ml-2 text-lg md:text-xl text-gray-300'
                  >/{pricingTier.period}</span
                >
              </div>
            </div>
            <div
              class='text-xl md:text-2xl font-bold text-green-400 group-hover:scale-110 transition-transform duration-300 mb-6 md:mb-8'
            >
              {pricingTier.savings}
            </div>
            <a href={pricingTier.link} target='_blank' class='w-full md:w-auto'>
              <button
                class='w-full md:w-auto cursor-pointer py-3 md:py-4 px-8 md:px-12 rounded-xl font-bold text-base md:text-lg transition-all duration-300 relative z-10 bg-gradient-to-r from-purple-500 to-pink-500 text-white hover:from-purple-600 hover:to-pink-600 hover:scale-105 shadow-lg shadow-purple-500/30'
              >
                Comenzar Ahora
              </button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
