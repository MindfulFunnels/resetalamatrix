<div class='w-full flex items-center justify-center'>
  <div class='relative aspect-video w-full max-w-4xl'>
    <!-- Fondo -->
    <div class='absolute inset-0 bg-purple-400/10 blur-3xl animate-pulse'></div>
    <div
      class='absolute inset-0 bg-gradient-to-r from-purple-400/10 to-violet-500/10 rounded-xl'
    >
    </div>

    <!-- Video -->
    <iframe
      id='vimeo-player'
      src='https://player.vimeo.com/video/1067408869?autoplay=1&muted=1&api=1'
      frameborder='0'
      allow='autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media'
      class='absolute inset-0 w-full h-full rounded-xl'
      title='Toda la información aquí'></iframe>
  </div>
</div>

<script>
  // Esperar a que el DOM esté cargado
  document.addEventListener("DOMContentLoaded", () => {
    const iframe = document.getElementById("vimeo-player");

    // Crear el reproductor de Vimeo
    const player = new Vimeo.Player(iframe);

    // Escuchar el evento de finalización
    player.on("ended", function () {
      console.log("Video terminado, redirigiendo...");
      window.location.href = "/membresia";
    });
  });
</script>

<!-- Cargar la API de Vimeo -->
<script src='https://player.vimeo.com/api/player.js'></script>
