---
interface Testimonial {
  name: string;
  role: string;
  content: string;
  image: string;
}

const testimonials: Testimonial[] = [
  {
    name: "María García",
    role: "Emprendedora",
    content:
      "Reset a la Matrix ha transformado completamente mi forma de pensar y actuar. Los resultados han sido increíbles.",
    image: "/testimonials/maria.jpg",
  },
  {
    name: "Carlos Rodríguez",
    role: "Profesional",
    content:
      "El programa me ayudó a superar mis limitaciones mentales y alcanzar objetivos que nunca pensé posibles.",
    image: "/testimonials/carlos.jpg",
  },
  {
    name: "Ana Martínez",
    role: "Coach",
    content:
      "Como profesional del desarrollo personal, puedo decir que este programa es único y altamente efectivo.",
    image: "/testimonials/ana.jpg",
  },
];
---

<section>
  <div class='container mx-auto px-4'>
    <h2 class='text-4xl font-bold text-center mb-12'>
      Lo que dicen nuestros miembros
    </h2>
    <div class='grid md:grid-cols-3 gap-8 max-w-6xl mx-auto'>
      {
        testimonials.map((testimonial) => (
          <div class='bg-white rounded-lg p-6 shadow-lg text-black'>
            <div class='flex items-center mb-4'>
              <img
                src={testimonial.image}
                alt={testimonial.name}
                class='w-12 h-12 rounded-full object-cover mr-4'
              />
              <div>
                <h3 class='font-semibold'>{testimonial.name}</h3>
                <p class='text-gray-600 text-sm'>{testimonial.role}</p>
              </div>
            </div>
            <p class='text-gray-700 italic'>"{testimonial.content}"</p>
            <div class='mt-4 flex text-yellow-400'>
              {[...Array(5)].map(() => (
                <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 20 20'>
                  <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z' />
                </svg>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
