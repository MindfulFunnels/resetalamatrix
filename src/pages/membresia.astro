---
import Layout from "../layouts/Layout.astro";
import FeaturesSection from "@/components/FeaturesSection.astro";
import PricingSection from "@/components/PricingSection.astro";
import FAQSection from "@/components/FAQSection.astro";
import TestimonialsSection from "@/components/TestimonialsSection.astro";
import ModulesSection from "@/components/ModulesSection.astro";
import TutorialSection from "@/components/TutorialSection.astro";
import Title from "@/components/Title.astro";
---

<Layout title='Reset a la Matrix - Membresía' isHome={false}>
  <main class='min-h-screen w-full flex flex-col gap-6 text-white'>
    <!-- Hero Section -->
    <section class='text-white'>
      <div class='container mx-auto px-4'>
        <div class='max-w-7xl mx-auto text-center'>
          <p class='text-2xl mb-8 text-gray-300 font-light'>
            Descubre el poder de la reprogramación mental y alcanza tus
            objetivos más ambiciosos.
          </p>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <FeaturesSection />

    <!-- Modules Section -->
    <ModulesSection />

    <!-- Pricing Section -->
    <PricingSection />

    <!-- Tutorial Section -->
    <TutorialSection />

    <!-- Testimonials Section -->
    <TestimonialsSection />

    <!-- FAQ Section -->
    <FAQSection />
  </main>
</Layout>
