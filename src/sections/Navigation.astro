---
import Logo from "@/assets/svg/logo.svg";

const currentPath = Astro.url.pathname;
const isHome = currentPath === "/";
---

<header
  class='fixed top-0 left-0 right-0 bg-gray-900/80 backdrop-blur-lg border-b border-purple-400/20 z-50'
>
  <nav class='container mx-auto px-4 py-4'>
    <div class='flex items-center justify-between text-white'>
      <a href='/' class='text-2xl font-bold group'>
        <Logo
          class='w-auto h-10 transition-all duration-300 group-hover:scale-110 group-hover:drop-shadow-[0_0_10px_rgba(168,85,247,0.5)]'
        />
      </a>

      <a
        href={isHome ? "/membresia" : "/"}
        class='text-gray-300 hover:text-purple-400 transition-colors duration-200'
      >
        {isHome ? "Unirme" : "Volver al inicio"}
      </a>
    </div>
  </nav>
</header>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
