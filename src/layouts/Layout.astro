---
import "../styles/global.css";
import Navigation from "@/sections/Navigation.astro";
import Footer from "@/sections/Footer.astro";

interface Props {
  title: string;
  isHome?: boolean;
}

const { title, isHome = false } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
    <!-- Precargar el video -->
    <link
      rel='preload'
      as='video'
      href='/videos/tv-on.mp4'
      type='video/mp4'
      fetchpriority='high'
    />
  </head>
  <body class='bg-gray-900 min-h-screen w-full'>
    <!-- Overlay de carga -->
    <div
      id='loading-overlay'
      class='fixed inset-0 z-[100] bg-gray-900 flex items-center justify-center'
    >
      <!-- Fallback mientras carga el video -->
      <div
        id='loading-fallback'
        class='absolute inset-0 flex items-center justify-center'
      >
        <div class='text-white text-xl'>Cargando...</div>
      </div>
      <video
        class='w-full h-full object-cover'
        autoplay
        muted
        playsinline
        preload='auto'
      >
        <source src='/videos/tv-on.mp4' type='video/mp4' />
      </video>
    </div>

    <!-- Navegación siempre visible -->
    <div class='relative z-50'>
      <Navigation />
    </div>
    <slot />
    <div class='relative z-50'>
      <Footer />
    </div>
  </body>
</html>

<script>
  // Esperar a que todo se cargue
  window.addEventListener("load", () => {
    const video = document.querySelector("#loading-overlay video");
    const fallback = document.getElementById("loading-fallback");

    if (video && fallback) {
      // Ocultar fallback cuando el video esté listo
      video.addEventListener("loadeddata", () => {
        fallback.style.display = "none";
      });

      // Manejar errores del video
      video.addEventListener("error", () => {
        console.error("Error al cargar el video");
        // Si hay error, esperar 2 segundos y ocultar el overlay
        setTimeout(() => {
          const overlay = document.getElementById("loading-overlay");
          if (overlay) {
            overlay.style.opacity = "0";
            overlay.style.transition = "opacity 0.5s ease-out";
            setTimeout(() => {
              overlay.style.display = "none";
            }, 500);
          }
        }, 2000);
      });

      // Manejar cuando el video termine
      video.addEventListener("ended", () => {
        const overlay = document.getElementById("loading-overlay");
        if (overlay) {
          overlay.style.opacity = "0";
          overlay.style.transition = "opacity 0.5s ease-out";
          setTimeout(() => {
            overlay.style.display = "none";
          }, 500);
        }
      });

      // Timeout de seguridad por si el video tarda demasiado
      setTimeout(() => {
        const videoElement = video as HTMLVideoElement;
        if (videoElement.readyState < 3) {
          // Si el video aún no está listo
          const overlay = document.getElementById("loading-overlay");
          if (overlay) {
            overlay.style.opacity = "0";
            overlay.style.transition = "opacity 0.5s ease-out";
            setTimeout(() => {
              overlay.style.display = "none";
            }, 500);
          }
        }
      }, 5000); // 5 segundos de timeout
    }
  });
</script>

<style>
  :root {
    scroll-behavior: smooth;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  #loading-overlay {
    transition: opacity 0.5s ease-out;
  }
  #loading-fallback {
    background-color: rgba(17, 24, 39, 0.9);
  }
</style>
