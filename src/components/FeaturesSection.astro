---
interface Feature {
  title: string;
  description: string;
  icon: string;
}

const features: Feature[] = [
  {
    title: "Clases en Vivo con Luis Garre",
    description:
      "Sesiones semanales donde vas a interactuar, preguntar y profundizar en tu despertar, con mentorías transformadoras.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
    </svg>`,
  },
  {
    title: "Biblioteca de Contenido Premium",
    description:
      "Accedé 24/7 a un catálogo exclusivo de clases grabadas sobre reprogramación mental, salud, abundancia, relaciones y expansión espiritual.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
    </svg>`,
  },
  {
    title: "Comunidad Activa 24/7",
    description:
      "Un espacio de acompañamiento real donde compartir experiencias, crecer con otros y mantener alta tu vibración. Siempre disponible.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
    </svg>`,
  },
  {
    title: "Masterclass con Invitados Especiales",
    description:
      "Aprende de los mejores referentes del desarrollo personal y espiritual. Sesiones únicas, con herramientas prácticas y sabiduría profunda.",
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
    </svg>`,
  },
];
---

<section class='py-8'>
  <div class='container mx-auto px-4'>
    <h2 class='text-5xl font-bold text-center mb-4 text-white'>
      ¿Qué incluye el programa?
    </h2>
    <p class='text-xl text-gray-300 text-center mb-16 max-w-2xl mx-auto'>
      Descubre las herramientas y recursos que te ayudarán a alcanzar tus
      objetivos
    </p>
    <div class='grid md:grid-cols-1 lg:grid-cols-2 gap-8 max-w-5xl mx-auto'>
      {
        features.map((feature) => (
          <div class='relative group h-full'>
            <div class='absolute inset-0 bg-gradient-to-r from-purple-600/30 to-violet-600/30 rounded-xl blur-xl opacity-25 group-hover:opacity-40 transition duration-1000' />
            <div class='relative p-8 bg-gray-800/80 backdrop-blur-sm rounded-xl border border-purple-500/10 hover:border-purple-500/30 transition duration-300 h-full flex flex-col'>
              <div class='text-purple-400 mb-6' set:html={feature.icon} />
              <h3 class='text-2xl font-bold mb-4 text-white'>
                {feature.title}
              </h3>
              <p class='text-lg text-gray-300 leading-relaxed flex-grow'>
                {feature.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
